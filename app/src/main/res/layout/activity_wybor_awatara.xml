<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".WyborAwatara">

    <TextView
        android:id="@+id/InfoAwatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="Wybierz awatara"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/awatar1button"
        android:layout_width="192dp"
        android:layout_height="184dp"
        android:layout_marginTop="60dp"
        android:foreground="@drawable/awatar1"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/awatarbutton2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InfoAwatar" />

    <Button
        android:id="@+id/awatarbutton2"
        android:layout_width="192dp"
        android:layout_height="184dp"
        android:layout_marginTop="60dp"
        android:foreground="@drawable/awatar2"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/awatar1button"
        app:layout_constraintTop_toBottomOf="@+id/InfoAwatar" />

    <Button
        android:id="@+id/awatarbutton4"
        android:layout_width="192dp"
        android:layout_height="184dp"
        android:layout_marginTop="60dp"
        android:foreground="@drawable/awatar3"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/awatarbutton3"
        app:layout_constraintTop_toBottomOf="@+id/awatarbutton2" />

    <Button
        android:id="@+id/awatarbutton3"
        android:layout_width="192dp"
        android:layout_height="184dp"
        android:layout_marginTop="60dp"
        android:foreground="@drawable/awatar4"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/awatarbutton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awatar1button" />
</androidx.constraintlayout.widget.ConstraintLayout>